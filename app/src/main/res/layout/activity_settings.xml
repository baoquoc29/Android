<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Settings">
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="72dp"

            android:layout_height="match_parent"
            android:src="@drawable/personw"></ImageView>
        <Button
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settingsLogin"
            android:id="@+id/LoginFr"
            android:textSize="25dp"
            style="?android:attr/buttonBarButtonStyle"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="/"></TextView>
        <Button
            android:textColor="@color/white"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/SignUpFr"
            android:text="@string/signupsettings"
            style="?android:attr/buttonBarButtonStyle"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ht24">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textSize="16dp"
            android:id="@+id/btnhistory_view"
            android:text="Lịch Sử Xem"
            android:textColor="@color/white"
            style="?android:attr/buttonBarButtonStyle"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:src="@drawable/wfvr">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textSize="16dp"
            android:id="@+id/btnfavorite"
            android:text="Bộ Truyện Yêu Thích "
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lanw"
            android:layout_marginTop="15dp"
            android:textColor="@color/white">

        </ImageView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:id="@+id/btnLanguge"
            android:text="Ngôn Ngữ"
            style="?android:attr/buttonBarButtonStyle"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/settingsw">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Cài Đặt"

            android:textColor="@color/white"
            style="?android:attr/buttonBarButtonStyle"
            android:textSize="16dp"
            android:id="@+id/btnSettings"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/sp">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Hỗ Trợ Khách Hàng"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/white"
            android:id="@+id/btnSupport"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/contact">

        </ImageView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingStart="10dp"
            style="?android:attr/buttonBarButtonStyle"
            android:text="Phương Thức Liên Hệ"
            android:textSize="16dp"
            android:id="@+id/btnContact"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="550dp"
        android:text="Team Dev UTT v.1.0.0"
        android:textColor="@color/white"
        android:textSize="10dp"
        tools:ignore="TextSizeCheck">

    </TextView>

</LinearLayout>